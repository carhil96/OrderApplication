<configuration>
  <!-- Appender para consola (fallback) -->
  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <!-- Appender para Logstash con configuración no-bloqueante -->
  <appender name="LOGSTASH" class="net.logstash.logback.appender.LogstashTcpSocketAppender">
    <destination>${SPRING_LOGSTASH_HOST:-logstash}:${SPRING_LOGSTASH_PORT:-5002}</destination>

    <!-- Configuración para evitar bloqueo -->
    <reconnectionDelay>5000</reconnectionDelay>
    <keepAliveDuration>5 minutes</keepAliveDuration>
    <writeTimeout>30 seconds</writeTimeout>

    <!-- Queue para evitar pérdida de logs -->
    <queueSize>512</queueSize>

    <encoder class="net.logstash.logback.encoder.LogstashEncoder">
      <includeContext>true</includeContext>
      <includeMdc>true</includeMdc>
    </encoder>
  </appender>

  <!-- Appender asíncrono para Logstash (no-bloqueante) -->
  <appender name="ASYNC_LOGSTASH" class="ch.qos.logback.classic.AsyncAppender">
    <appender-ref ref="LOGSTASH" />
    <queueSize>512</queueSize>
    <discardingThreshold>0</discardingThreshold>
    <neverBlock>true</neverBlock>
  </appender>

  <root level="INFO">
    <appender-ref ref="CONSOLE" />
    <appender-ref ref="ASYNC_LOGSTASH" />
  </root>
</configuration>
